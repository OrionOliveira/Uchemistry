<StockScreen>:
    FloatLayout:
        BoxLayout:
            orientation: 'vertical'
            MDTopAppBar:
                md_bg_color: 0.5, 0, 0.5, 1
                pos_hint: {'top': 1}
                title: 'UChemistry - Products'
                right_action_items:
                    [["home", lambda x: app.change_screen('menu')]]
            MDTextField:
                hint_text: 'Enter product name'
                pos_hint: {'center_x': 0.5, 'center_y': 0.9}
                size_hint_x: None
                width: 270
            MDRectangleFlatIconButton:
                icon: 'plus-circle'
                text: 'Add Product'
                pos_hint: {'center_x': 0.25, 'center_y': 0.8}
                on_release: root.add_product()
            ScrollView:
                MDList:
                    id: list
                    OneLineAvatarIconListItem:
                        text: 'Radioativo'
                        on_press: app.root.current = 'user_screen'
                    OneLineAvatarIconListItem:
                        text: 'Não Radioativo'
                        IconLeftWidget:
                            icon: 'radioactive-off'
                        IconRightWidget:
                            icon: 'numeric-9' 
                    OneLineAvatarIconListItem:
                        text: 'Não Radioativo'
                        IconLeftWidget:
                            icon: 'bottle-tonic-plus'
                        IconRightWidget:
                            icon: 'numeric-5'
                    OneLineAvatarIconListItem:
                        text: 'Radioativo'
                        IconLeftWidget:
                            icon: 'radioactive'
                        IconRightWidget:
                            icon: 'numeric-3'
                    OneLineAvatarIconListItem:
                        text: 'Não Radioativo'
                        IconLeftWidget:
                            icon: 'radioactive-off'
                        IconRightWidget:
                            icon: 'numeric-9' 
                    OneLineAvatarIconListItem:
                        text: 'Não Radioativo'
                        IconLeftWidget:
                            icon: 'bottle-tonic-plus'
                        IconRightWidget:
                            icon: 'numeric-5'
                    OneLineAvatarIconListItem:
                        text: 'Radioativo'
                        IconLeftWidget:
                            icon: 'radioactive'
                        IconRightWidget:
                            icon: 'numeric-3'
                    OneLineAvatarIconListItem:
                        text: 'Não Radioativo'
                        IconLeftWidget:
                            icon: 'radioactive-off'
                        IconRightWidget:
                            icon: 'numeric-9' 
                    OneLineAvatarIconListItem:
                        text: 'Não Radioativo'
                        IconLeftWidget:
                            icon: 'bottle-tonic-plus'
                        IconRightWidget:
                            icon: 'numeric-5'

<Product>:
    prd_name: product_name
    cas_num: product_cas_num
    prd_qtde: product_quantity

    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "200dp"

    MDTextField:
        id: product_name
        hint_text: "Name"
        helper_text: ''
        helper_text_mode: 'on_error'
        required: False

    MDTextField:
        id: product_cas_num
        hint_text: "CAS Number"
        helper_text: ''
        helper_text_mode: 'on_error'
        required: False

    MDTextField:
        id: product_quantity
        hint_text: "Quantity"
        helper_text: ''
        helper_text_mode: 'on_error'
        required: False
